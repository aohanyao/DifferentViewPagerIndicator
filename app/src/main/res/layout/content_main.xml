<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.yida.cloud.merchants.MainActivity"
    tools:showIn="@layout/activity_main">

    <com.yida.cloud.merchants.indicator.ViewPagerIndicator
        android:id="@+id/vi1"
        android:layout_width="match_parent"
        android:layout_height="100dp" />

    <com.yida.cloud.merchants.DifferentViewPagerIndicator
        android:id="@+id/tlHome"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/colorPrimary"
        app:tabIndicatorCount="3"
        app:tabIndicatorHeight="2.5dp"
        app:tabIndicatorTextSize="16sp"
        app:tabSelectedTextColor="@color/colorPrimary"
        app:tabTextColor="#fff" />

    <android.support.v4.view.ViewPager
        android:id="@+id/vpHome"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_weight="1"
        android:background="#fff" />

</LinearLayout>
